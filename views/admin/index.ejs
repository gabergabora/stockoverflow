<%- include("partials/header") %>

<div id="body-container">
  <div class="table-container">
    <h1 class="header-black">TRACKED STOCKS <i onclick="togglePopup()" class="fa fa-plus float-right"></i></h1> 
    <table class="table table-hover mb-0">
      <thead>
        <tr>
          <th scope="col" class="first-th">User Name</th>
          <th scope="col">User ID</th>
          <th scope="col">Delete User</th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach(user => { %>
        <tr>
          <th scope="row">
            <div class="row-header">
              <%=user.username%>
            </div>
          </th>
          <td ><%=user._id%></td>
          <td>
            <i class="fa fa-trash"></i>
            <form class="d-none" action="/users/<%=currentUser._id%>/stocks/<%=stock._id%>?_method=DELETE"method="POST">
              <button type="submit" class="d-none" id ="deleteButton"></button>
            </form>
          </td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </div>

</div>

<%- include("partials/footer") %>
