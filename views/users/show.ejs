<%- include("../partials/header") %>

<div id="body-container" class="row justify-content-center">
    <div class="col-8 col-md-12 col-lg-10 col-xl-8">
      
      <h1 class="header-black">BASIC INFORMATION</h1>
      <div class="card-container">
        <div class="form-row pt-3">
          <!-- username -->
          <div class="col-12">
            <div class="row">
              <div class="col-3 card-row">User Name:</div>
              <div class="col-7 card-row">
                <%=currentUser.username %>
              </div>
            </div>
          </div>

          <!-- email -->
          <div class="col-12">

            <div class="row">
              <div class="col-3 card-row">Email:</div>
              <div class="col-7 card-row">
                <%=currentUser.email %>
              </div>
              <div class="col-2 button-container">
                <i class="fas fa-edit fa-md"></i>
              </div>
            </div>

            <div class="editForm display-none">
              <form action="/users/<%= currentUser._id %>?_method=PUT" method="POST">
                <div class="row">
                    <div class="col-3"></div>
                    <div class="col-6 pl-5">
                      <input
                        type="text"
                        class="form-control"
                        name="email"
                        value=<%=currentUser.email %>
                      />
                    </div>
                    <div class="col-2 button-container">
                      <button class="btn green-button">
                        Confirm
                      </button>
                    </div>
                </div>
              </form>
            </div>
          </div>

          <!-- firstname -->
          <div class="col-12">
            <div class="row">
              <div class="col-3 card-row">First Name:</div>
              <div class="col-7 card-row">
                <%=currentUser.firstname %>
              </div>
              <div class="col-2 button-container">
                <i class="fas fa-edit fa-md"></i>
              </div>
            </div>

            <div class="editForm display-none">
              <form  action="/users/<%= currentUser._id %>?_method=PUT" method="POST">
                <div class="row">
                    <div class="col-3"></div>
                    <div class="col-6 pl-5">
                      <input
                        type="text"
                        class="form-control"
                        name="firstname"
                        value=<%=currentUser.firstname %>
                      />
                    </div>
                    <div class="col-2 button-container">
                      <button class="btn green-button">
                        Confirm
                      </button>
                    </div>
                </div>
              </form>
            </div>
          </div>

          <!-- lasstname -->
          <div class="col-12">
            <div class="row">
              <div class="col-3 card-row">Last Name:</div>
              <div class="col-7 card-row">
                <%=currentUser.lastname %>
              </div>
              <div class="col-2 button-container">
                <i class="fas fa-edit fa-md"></i>
              </div>
            </div>
            <div class="editForm display-none">
              <form action="/users/<%= currentUser._id %>?_method=PUT" method="POST">
              <div class="row">
                  <div class="col-3"></div>
                  <div class="col-6 pl-5">
                    <input
                      type="text"
                      class="form-control"
                      name="lastname"
                      value=<%=currentUser.lastname %>
                    />
                  </div>
                  <div class="col-2 button-container">
                    <button class="btn green-button">
                      Confirm
                    </button>
                  </div>
              </div>
              </form>
            </div>
          </div>
          
        </div>
      </div>

      <!-- Password -->

      <form action="/users/<%= currentUser._id %>?_method=PUT" method="POST">

      <div class="card-container margin-top-2rem">
        <h1 class="header-black">PASSWORD</h1>
        
        <div class="form-row pt-3">

          <div class="col-12">
            <div class="row">
              <div class="col-5 card-row">Current Password:</div>
              <div class="col-6 ">
                <input
                  type="password"
                  class="form-control"
                  name="oldpassword"
                  required
                />
              </div>
            </div>
          </div>

          <div class="col-12">
            <div class="row">
              <div class="col-5 card-row">New Password:</div>
              <div class="col-6 ">
                <input
                  type="password"
                  class="form-control"
                  name="newpassword"
                  required
                />
              </div>
            </div>
          </div>

          <div class="col-12">
            <div class="row">
              <div class="col-5 card-row">Re-type New Password:</div>
              <div class="col-6 ">
                <input
                  type="password"
                  class="form-control"
                  name="confirmnewpassword"
                  required
                />
              </div>
            </div>
          </div>

          <div class="col-12">
            <div class="row">
              <div class="col-9"> </div>
              <div class="col-2 button-container ml-2">
                <button class="btn green-button">
                  Confirm
                </button>
              </div>
            </div>
          </div>
          
        </div>
      </div>
    </form>

    </div>
</div>

<%- include("../partials/footer") %>
