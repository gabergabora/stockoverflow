<%- include("../partials/header") %>

<% if (currentUser) { %>

<div id="body-container">
  <% if (currentUser.purchases.length === 0) { %>
    <div>
      <h1 class="header-black">Assets <a href="/purchases/<%=currentUser._id%>/new"><i class="fa fa-plus float-right"></i></a></h1>
      <div class="card-container card-center">
        You don't own any stock
      </div>
    </div>
    
    <% } else { %>

  <div class="table-container">
    <h1 class="header-black">ASSETS <a href="/purchases/<%=currentUser._id%>/new"><i class="fa fa-plus float-right"></i></a></h1>
    <table class="table table-hover mb-0">
      <thead>
        <tr>
          <th scope="col" class="first-th" >Company Name</th>
          <th scope="col">Symbol</th>
          <th scope="col">Total Price</th>
          <th scope="col">Total Quantity</th>
        </tr>
      </thead>
      <tbody>
        <% purchases.forEach(function(purchase){ %>
        <tr>
          <th scope="row" >
            <div class="row-header">
              <span class="add-to-tracked" title="Add to tracked stocks"> 
                <i class="fa fa-eye"></i> 
              </span> 
              <form class="d-none" action="/stocks/<%=currentUser._id%>/<%=purchase.stockid%>?_method=PUT" method="POST">
                <button type="submit" id ="addToTrackedButton"></button>
              </form>
              <%=purchase.name%>
            </div>
          </th>
          <td><%=purchase.symbol%></td>
          <td><%=Math.floor(purchase.totalprice/100)%>.<%=(purchase.totalprice)%100%></td>
          <td>
            <%=purchase.totalquantity%>
            <span class="d-none"> 
              <a href="/stocks/<%=currentUser._id%>/<%=purchase.stockid%>">
                <i class="fa-info"></i>
              </a>
            </span> 
          </td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </div>

  <% } %>

  
  <% if (currentUser.purchases.length === 0) { %>
    <div class="margin-top-2rem">
      <h1 class="header-black">Transaction History</h1>
      <div class="card-container card-center">
        You haven't made any purchases
      </div>
    </div>
    
    <% } else { %>
    
  <div class="table-container margin-top-2rem">
    <h1 class="header-black">TRANSACTION HISTORY</h1>
    <table class="table table-hover mb-0">
      <thead>
        <tr>
          <th scope="col" class="first-th">Company Name</th>
          <th scope="col">Symbol</th>
          <th scope="col">Type</th>
          <th scope="col">Time</th>
          <th scope="col">Price</th>
          <th scope="col">Quantity</th>
          <th scope="col">Total</th>
        </tr>
      </thead>
      <tbody>
        <% purchases.forEach(function(purchase){ %>
          <% purchase.history.forEach(function(history){ %>
        <tr>
          <th scope="row">
            <div class="row-header">
              <%=purchase.name%>
            </div>
          </th>
          <td><%=purchase.symbol%></td>
          <td><%=history.transaction%></th>
          <td><%=history.time%></td>
          <td><%=Math.floor(history.price/100)%>.<%=(history.price)%100%></td>
          <td><%=history.quantity%></td>
          <td
            <% if (history.transaction === "Purchase") { %>
              class="negative" > -<% } else { %> class="possitive" > +<% } %><%=Math.floor((history.quantity*history.price)/100)%>.<%=(history.quantity*history.price)%100%>
            <span class="d-none"> 
              <a href="/stocks/<%=currentUser._id%>/<%=purchase.stockid%>">
                <i class="fa-info"></i>
              </a>
            </span> 
          </td>
        </tr>
          <% }); %>
        <% }); %>
      </tbody>
    </table>
  </div>

  

  <% } %>
</div>


<% } %>
<%- include("../partials/footer") %>
