<%- include("../partials/header") %>

<% if (currentUser) { %>

<div id="dashboard-container">
  <% if (currentUser.purchases.length === 0) { %>
    <div>
      <h1 class="header-black">Assets <a href="/purchases/<%=currentUser._id%>/new"><i class="fa fa-plus header-fa"></i></a></h1>
      <div class="empty-mes">
        You don't own any stock
      </div>
    </div>
    
    <% } else { %>
  <div id="tracked-stocks">
    <h1 class="header-black">Assets <a href="/purchases/<%=currentUser._id%>/new"><i class="fa fa-plus header-fa"></i></a></h1>

    <!-- <h1 class="header-black">Assets</h1> -->
    <table id="purchase" class="table table-hover mb-0">
      <thead>
        <tr>
          <th scope="col" class="first-th" >Name</th>
          <th scope="col">Tick Symbol</th>
          <th scope="col">Purchased Price</th>
          <th scope="col">Purchases Quantity</th>
        </tr>
      </thead>
      <tbody>
        <% purchases.forEach(function(purchase){ %>
        <tr>
          <th scope="row" >
            <div class="row-header">
              <span class="add-to-tracked" title="Add to tracked stocks"> 
                <i class="fa fa-eye"></i> 
              </span> 
              <form class="d-none" action="/stocks/<%=currentUser._id%>/<%=purchase.stockid%>?_method=PUT" method="POST">
                <button type="submit" id ="addToTrackedButton"></button>
              </form>
              <%=purchase.name%>
            </div>
          </th>
          <td><%=purchase.symbol%></td>
          <td><%=Math.floor(purchase.totalprice/100)%>.<%=(purchase.totalprice)%100%></td>
          <td><%=purchase.totalquantity%></td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
  <% } %>

  
  <% if (currentUser.purchases.length === 0) { %>
    <div>
      <h1 class="header-black">Transaction History</h1>
      <div class="empty-mes">
        You haven't made any purchases
      </div>
    </div>
    
    <% } else { %>
    
  <div id="tracked-stocks">
    <h1 class="header-black">Transaction History</h1>
    <table class="table table-hover mb-0">
      <thead>
        <tr>
          <th scope="col" class="first-th">Name</th>
          <th scope="col">Tick Symbol</th>
          <th scope="col">Bought Time</th>
          <th scope="col">Bought Price</th>
          <th scope="col">Quantity</th>
          <th scope="col">Total</th>
        </tr>
      </thead>
      <tbody>
        <% purchases.forEach(function(purchase){ %>
          <% purchase.history.forEach(function(history){ %>
        <tr>
          <th scope="row" >
            <div class="row-header">
              <%=purchase.name%>
            </div>
          </th>
          <td><%=purchase.symbol%></td>
          <td><%=history.time%></td>
          <td><%=Math.floor(history.price/100)%>.<%=(history.price)%100%></td>
          <td><%=history.quantity%></td>
          <td><%=Math.floor((history.quantity*history.price)/100)%>.<%=(history.quantity*history.price)%100%></td>
        </tr>
          <% }); %>
        <% }); %>
      </tbody>
    </table>
  </div>

  

  <% } %>
</div>


<% } %>
<%- include("../partials/footer") %>
