<%- include("../partials/header") %>

<div class="container mgtop">
  <div class="row justify-content-center">
    <div class="col-8 col-md-12 col-lg-10 col-xl-8 min-md">
      <div id="intro-signup" class="border-black mg-2">
        <h1 class="header-black">Purchase Stock</h1>
        <form
          action="/purchases/<%=currentUser._id%>/<%=stock._id%>"
          method="POST"
        >
        <div class="form-row pt-3">
          <div class="col-12">
            <div class="row">
              <div id="tickSymbolDiv" class="col-3 user-info">Tick Symbol:</div>
              <div class="col-7 ">
                <input 
                  id="purchase-symbol"
                  type="text"
                  class="form-control"
                  name="purchase[symbol]"
                  required
                />
              </div>
              <div class="col-1 signup-button">
                <i onclick="togglePopup()" class="fas fa-search fa-lg vertical-middle"></i>
              </div>
            </div>
          </div>

          <div class="col-12">
            <div class="row">
              <div class="col-3 user-info">Price</div>
              <div class="col-7 ">
                <input
                  id="purchase-price"
                  type="number"
                  step="0.01"
                  class="form-control"
                  name="purchase[price]"
                  required
                />
              </div>
              <!-- <div class="col-1 signup-button">
                <i class="fas fa-edit fa-lg editPrice"></i>
              </div> -->
            </div>
          </div>

          <div class="col-12">
            <div class="row">
              <div class="col-3 user-info">Time:</div>
              <div class="col-7 ">
                <input
                  id="purchase-time"
                  type="date"
                  class="form-control"
                  name="purchase[time]"
                  required
                />
              </div>
              <!-- <div class="col-1 signup-button">
                <i class="fas fa-edit fa-lg editLast"></i>
              </div> -->
            </div>
          </div>

          <div class="col-12">
            <div class="row">
              <div class="col-3 user-info">Quantity:</div>
              <div class="col-7 ">
                <input
                  type="number"
                  class="form-control"
                  name="purchase[quantity]"
                  required
                />
              </div>
              <!-- <div class="col-1 signup-button">
                <i class="fas fa-edit fa-lg editLast"></i>
              </div> -->
            </div>
          </div>

          <div class="col-12">
            <div class="row">
              <div class="col-9"> </div>
              <div class="col-2 signup-button">
                <button class="btn custom-signup-btn">
                  Confirm
                </button>
              </div>
            </div>
          </div>
          
        </div>
        </form>

      </div>

    </div>
  </div>
</div>

<div class="popup" id="popup-1">
  <div class="overlay">
    <div class="fa fa-times" onclick="togglePopup()"></div>
  </div>
  
  <div class="content">
    <input
      id="searchStock"
      class="form-control mb-0"
      type="text"
      name="stock[symbol]"
      placeholder="Enter tick symbol"
      required
      autocomplete="off"
    />
    <div id="searchResult"></div>
  </div>
</div>


