<%- include("../partials/header") %>

<% if (currentUser) { %>

<div id="body-container">
  <% if (currentUser.transactions.length === 0) { %>
  <div>
    <h1 class="header-black">Assets <a href="/transactions/<%=currentUser._id%>/new"><i class="fa fa-plus float-right"></i></a></h1>
    <div class="card-container card-center">
      You don't own any stock
    </div>
  </div>
  <% } else { %>
  <div class="table-container">
    <h1 class="header-black">ASSETS <a href="/transactions/<%=currentUser._id%>/new"><i class="fa fa-plus float-right"></i></a></h1>
    <table class="table table-hover mb-0">
      <thead>
        <tr>
          <th scope="col" class="first-th" >Company Name</th>
          <th scope="col">Symbol</th>
          <th scope="col">Total Price</th>
          <th scope="col">Total Quantity</th>
        </tr>
      </thead>
      <tbody>
        <% transactions.forEach(function(transaction){ %>
          <% if (transaction.totalquantity > 0) { %>
            <tr>
              <th scope="row" >
                <div class="row-header">
                  <span class="add-to-tracked" title="Add to tracked stocks"> 
                    <i class="fa fa-eye"></i> 
                  </span> 
                  <form class="d-none" action="/stocks/<%=currentUser._id%>/<%=transaction.stockid%>?_method=PUT" method="POST">
                    <button type="submit" id ="addToTrackedButton"></button>
                  </form>
                  <%=transaction.name%>
                </div>
              </th>
              <td><%=transaction.symbol%></td>
              <td><%=Math.floor(transaction.totalprice/100)%>.<%=(transaction.totalprice)%100%></td>
              <td>
                <%=transaction.totalquantity%>
                <span class="d-none"> 
                  <a href="/stocks/<%=currentUser._id%>/<%=transaction.stockid%>">
                    <i class="fa-info"></i>
                  </a>
                </span> 
              </td>
            </tr>
          <% } %>
        <% }); %>
      </tbody>
    </table>
  </div>

  <% } %>

  
  <% if (currentUser.transactions.length === 0) { %>
    <div class="margin-top-2rem">
      <h1 class="header-black">Transaction History</h1>
      <div class="card-container card-center">
        You haven't made any transactions
      </div>
    </div>
    
    <% } else { %>
    
  <div class="table-container margin-top-2rem">
    <h1 class="header-black">TRANSACTION HISTORY</h1>
    <table class="table table-hover mb-0">
      <thead>
        <tr>
          <th scope="col" class="first-th">Company Name</th>
          <th scope="col">Symbol</th>
          <th scope="col">Type</th>
          <th scope="col">Time</th>
          <th scope="col">Price</th>
          <th scope="col">Quantity</th>
          <th scope="col">Total</th>
        </tr>
      </thead>
      <tbody>
        <% transactions.forEach(function(transaction){ %>
          <% transaction.history.forEach(function(history){ %>
        <tr>
          <th scope="row">
            <div class="row-header">
              <%=transaction.name%>
            </div>
          </th>
          <td><%=transaction.symbol%></td>
          <td><%=history.transactiontype%></th>
          <td><%=history.time%></td>
          <td><%=Math.floor(history.price/100)%>.<%=(history.price)%100%></td>
          <td><%=history.quantity%></td>
          <td
            <% if (history.transactiontype === "Purchase") { %>
              class="negative" > -<% } else { %> class="possitive" > +<% } %><%=Math.floor((history.quantity*history.price)/100)%>.<%=(history.quantity*history.price)%100%>
            <span class="d-none"> 
              <a href="/stocks/<%=currentUser._id%>/<%=transaction.stockid%>">
                <i class="fa-info"></i>
              </a>
            </span> 
          </td>
        </tr>
          <% }); %>
        <% }); %>
      </tbody>
    </table>
  </div>

  

  <% } %>
</div>


<% } %>
<%- include("../partials/footer") %>
